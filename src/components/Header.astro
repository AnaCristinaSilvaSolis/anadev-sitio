<header
  class='fixed top-0 left-0 w-full bg-background/80 backdrop-blur-md shadow-md z-50 border-b border-border'
>
  <nav class='container mx-auto flex justify-between items-center py-4 px-6'>
    <a href='/' class='text-2xl font-bold text-accent'>Anadev</a>

    <ul
      class='mx-auto justify-between items-center py-4 px-6 hidden md:flex space-x-8 text-muted-foreground font-medium'
    >
      <li>
        <a href='#services' class='hover:text-accent transition-colors'
          >Servicios</a
        >
      </li>
      <li>
        <a href='#feature' class='hover:text-accent transition-colors'
          >Características</a
        >
      </li>
      <li>
        <a href='#about' class='hover:text-accent transition-colors'
          >Sobre Nosotros</a
        >
      </li>
      <li>
        <a href='#project' class='hover:text-accent transition-colors'
          >Proyectos</a
        >
      </li>
      <li>
        <a href='#testimonials' class='hover:text-accent transition-colors'
          >Testimonios</a
        >
      </li>
      <li>
        <a href='#contact' class='hover:text-accent transition-colors'
          >Contacto</a
        >
      </li>
    </ul>

    <!-- Updated mobile button color -->
    <button
      id='menu-toggle'
      class='md:hidden text-muted-foreground text-2xl focus:outline-none hover:text-accent'
    >
      ☰
    </button>
  </nav>

  <!-- Updated mobile menu with new colors -->
  <div
    id='mobile-menu'
    class='hidden flex-col absolute top-16 left-0 w-full bg-background/95 backdrop-blur-md shadow-lg md:hidden transition-all duration-300 border-b border-border'
  >
    <a
      href='#services'
      class='block py-3 px-6 border-b border-border hover:bg-secondary hover:text-accent text-muted-foreground'
      >Servicios</a
    >
    <a
      href='#feature'
      class='block py-3 px-6 border-b border-border hover:bg-secondary hover:text-accent text-muted-foreground'
      >Características</a
    >
    <a
      href='#about'
      class='block py-3 px-6 border-b border-border hover:bg-secondary hover:text-accent text-muted-foreground'
      >Sobre Nosotros</a
    >
    <a
      href='#project'
      class='block py-3 px-6 border-b border-border hover:bg-secondary hover:text-accent text-muted-foreground'
      >Proyectos</a
    >
    <a
      href='#testimonials'
      class='block py-3 px-6 border-b border-border hover:bg-secondary hover:text-accent text-muted-foreground'
      >Testimonios</a
    >
    <a
      href='#contact'
      class='block py-3 px-6 hover:bg-secondary hover:text-accent text-muted-foreground'
      >Contacto</a
    >
  </div>

  <script>
    const toggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');

    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    }
  </script>
</header>
