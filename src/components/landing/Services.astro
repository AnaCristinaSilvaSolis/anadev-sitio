---
import services from '../../config/services.json';
---

<section id='services'>
  <h2 class='text-center font-bold text-5xl mt-10'>Nuestros Servicios</h2>
  <div class='grid md:grid-cols-3 gap-4 p-10 text-center'>
    {
      services.map((service) => (
        <div class='bg-blue-900 p-10 rounded-xl transform transition-all duration-300 hover:scale-105 hover:shadow-2xl text-white'>
          <h2 class='text-2xl font-bold my-4'>{service.name}</h2>
          <p>{service.description}</p>
        </div>
      ))
    }
  </div>
</section>
